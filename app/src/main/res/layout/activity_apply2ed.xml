<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Apply2edActivity"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar_apply2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:background="@drawable/xuxian"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/textviewround"
            android:id="@+id/a1"
            android:text="1"
            android:textColor="#fff"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_marginLeftPercent ="8%"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="上传电子合同"
            android:layout_marginTop="5dp"

            android:textColor="@color/blue"
            android:layout_below="@+id/a1"
            app:layout_marginLeftPercent ="3%"/>




        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/a2"
            android:layout_toRightOf="@id/a1"
            android:background="@drawable/textviewround"
            android:text="2"
            android:gravity="center"
            android:textColor="#fff"

            app:layout_marginLeftPercent ="20%"
            android:textSize="12sp"

            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="个人信息认证"
            android:layout_marginTop="5dp"

            android:textColor="@color/blue"
            android:layout_below="@+id/a1"
            android:layout_toRightOf="@+id/a1"
            app:layout_marginLeftPercent ="15%"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/a3"
            android:layout_toLeftOf="@+id/a4"
            android:background="@drawable/textviewroundgray"
            android:text="3"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#fff"

            app:layout_marginRightPercent ="20%"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="签署告知函"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            android:layout_below="@+id/a2"
            android:layout_toRightOf="@+id/a2"
            app:layout_marginLeftPercent ="21%"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/a4"
            android:gravity="center"
            android:textSize="12sp"

            android:background="@drawable/textviewroundgray"
            android:text="4"
            app:layout_marginRightPercent ="8%"
            android:textColor="#fff"

            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="提交审核"
            android:layout_marginTop="5dp"

            android:textColor="@color/gray"
            android:layout_below="@+id/a1"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent ="5%"/>



    </androidx.percentlayout.widget.PercentRelativeLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFF0F4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a21"
            android:textColor="#333333"
            android:text="联系方式"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E31313"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/a21"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_apply2_phone"
            android:hint="输入申请人联系方式"
            android:textSize="14sp"
            android:inputType="phone"
            android:background="@drawable/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/a21"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a22"
            android:textColor="#333333"
            android:text="验证码"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E31313"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/a22"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_apply2_vcode"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:background="@drawable/transparent"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/tv_apply2_vcode"
/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="#4478ED"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_apply2_vcode"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/a22"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收不到短信？试试"
            android:textSize="10sp"
            android:layout_toLeftOf="@+id/tv_apply2_voice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音验证"
            android:textSize="10sp"
            android:textColor="@color/blue"
            android:id="@+id/tv_apply2_voice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:id="@+id/sbtn_apply2_verify"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="111dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="身份信息认证"
            android:background="@drawable/buttonclick"/>

    </RelativeLayout>




</LinearLayout>