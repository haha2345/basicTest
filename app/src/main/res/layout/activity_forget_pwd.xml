<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgetPwdActivity"
    android:background="@color/white"
    android:orientation="vertical"
>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="50dp"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_forgetPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/transparent"
            android:ems="19"
            android:hint="输入您的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="1dp"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="20dp"
                android:text="验证码"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_forgetVcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/transparent"
                android:ems="19"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="6"
                android:padding="1dp"
                android:textSize="12sp">

            </EditText>

            <TextView
                android:id="@+id/btn_forget_getvcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="1dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:text="发送验证码"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <!--注册按钮位置-->
        <LinearLayout
            android:layout_width="301dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="40dp">
            <Button
                android:id="@+id/btn_forget_next"
                android:enabled="false"
                android:layout_width="301dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/buttonclick"
                android:clickable="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_forget_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>