<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    app:qmui_skin_background="?attr/app_skin_common_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@mipmap/main_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/logo"
                        />
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="28dp"
                        android:text="山东省青岛市琴岛公证处"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/conner"
                android:layout_marginTop="-56dp"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <top.androidman.SuperButton
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    app:icon="@mipmap/gognzheng"
                    app:background_normalColor="@color/white"
                    app:text="赋强公正"
                    android:id="@+id/btn_main_fqgz"
                    app:iconPadding="10dp"
                    app:iconHeight="26dp"
                    app:iconOrientation="top"
                    app:iconWidth="26dp"
                    app:textSize="12sp"
                    />
                <top.androidman.SuperButton
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    app:icon="@mipmap/gognzhengjilu"
                    app:background_normalColor="@color/white"
                    app:text="公正记录"
                    android:id="@+id/btn_main_gzjl"
                    app:iconPadding="10dp"
                    app:iconHeight="26dp"
                    app:iconOrientation="top"
                    app:iconWidth="26dp"
                    app:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    />

                <top.androidman.SuperButton
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    app:icon="@mipmap/wenshuguanli"
                    app:background_normalColor="@color/white"
                    app:text="文书管理"
                    android:id="@+id/btn_main_wsgl"
                    app:iconPadding="10dp"
                    app:iconHeight="26dp"
                    app:iconOrientation="top"
                    app:iconWidth="26dp"
                    app:textSize="12sp"
                    />


                <top.androidman.SuperButton
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    app:icon="@mipmap/shiyongzhinan"
                    android:layout_marginLeft="30dp"
                    app:text="使用指南"
                    android:id="@+id/btn_main_syzn"
                    app:iconPadding="10dp"
                    app:iconHeight="26dp"
                    app:iconOrientation="top"
                    app:iconWidth="26dp"
                    app:textSize="12sp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_main_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/laba"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    />


                <TextView
                    android:id="@+id/tv_main_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    android:textColor="#989BA3"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_main_tv1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="公证是公证机构根据自然人、法人或者..." />

            </RelativeLayout>

            <!--列表-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/tuoyuanxing" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行业资讯"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"/>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reView_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <!--申办流程-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/tuoyuanxing" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申办流程"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_main_shenbanliucheng"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="这里写申办流程，这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程这里写申办流程"/>
            </LinearLayout>




        </LinearLayout>





    </ScrollView>
</LinearLayout>