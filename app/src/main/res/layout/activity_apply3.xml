<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Apply3Activity"
        android:orientation="vertical">
        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar_apply3"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"/>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layerType="software"
                android:background="@drawable/xuxian"
                android:layout_centerVertical="true"
                app:layout_marginLeftPercent="8%"
                app:layout_marginRightPercent="8%"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/textviewround"
                android:id="@+id/a1"
                android:text="1"
                android:textColor="#fff"
                android:textSize="12sp"
                android:gravity="center"
                app:layout_marginLeftPercent ="8%"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="上传电子合同"
                android:layout_marginTop="5dp"

                android:textColor="@color/blue"
                android:layout_below="@+id/a1"
                app:layout_marginLeftPercent ="3%"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/a2"
                android:layout_toRightOf="@id/a1"
                android:background="@drawable/textviewround"
                android:text="2"
                android:gravity="center"
                android:textColor="#fff"

                app:layout_marginLeftPercent ="20%"
                android:textSize="12sp"

                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="个人信息认证"
                android:layout_marginTop="5dp"

                android:textColor="@color/blue"
                android:layout_below="@+id/a1"
                android:layout_toRightOf="@+id/a1"
                app:layout_marginLeftPercent ="15%"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/a3"
                android:layout_toLeftOf="@+id/a4"
                android:background="@drawable/textviewround"
                android:text="3"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff"

                app:layout_marginRightPercent ="20%"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="签署告知函"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:layout_below="@+id/a2"
                android:layout_toRightOf="@+id/a2"
                app:layout_marginLeftPercent ="21%"/>

            <TextView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@drawable/textviewroundgray"
                android:gravity="center"
                android:text="4"
                android:textColor="#fff"

                android:textSize="12sp"

                app:layout_marginRightPercent="8%" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="提交审核"
                android:layout_marginTop="5dp"

                android:textColor="@color/gray"
                android:layout_below="@+id/a1"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent ="5%"/>



        </androidx.percentlayout.widget.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/conner_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_apply3_name"
                android:text="王小利"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_apply3_file_name"
                android:layout_marginLeft="10dp"
                android:text="XXXXXX无抵押贷款合同"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="《赋予债权文书强制执行效力公证告知函》"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EFF0F4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的当事人："
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_apply3_name1"
                android:text="王小利"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/conner_gray"
            android:padding="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="甲方"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_apply3_bank"
                    android:text="交通银行"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_bank"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乙方"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_apply3_name2"
                    android:text="王小利"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_name2"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同名称"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_apply3_file_name1"
                    android:text="XXXXXX无抵押贷款合同"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_file_name1"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同编号"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_apply3_file_no"
                    android:text="2020022333XSS"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_file_no"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同金额"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_apply3_money"
                    android:text="¥ 80,000.00"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_money"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="公证处"
                    android:textColor="#ff989ba3"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:id="@+id/tv_apply3_gongzhengchu"
                    android:text="琴岛公证处"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFF0F4"
                    android:layout_below="@+id/tv_apply3_gongzhengchu"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <!--文书内容-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="visible"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/apply3_small"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/shouxie"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="手写签名"
                        android:textColor="#ff245fff"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

<!--            签名成功后显示-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:visibility="invisible"
                android:background="@drawable/layout_selector"
                android:layout_margin="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/apply3_small">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/im_apply_auto"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="20dp"
                        android:text="重新填写"
                        android:textColor="#ff245fff"
                        android:textSize="14sp"
                        android:id="@+id/tv_apply3_reauto"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="2020-05-21 12:23:12"
                        android:textColor="#ff989ba3"
                        android:textSize="12sp"
                        android:layout_below="@+id/tv_apply3_reauto"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_apply3_auto_date"
                        />

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:background="@drawable/layout_selector"
            android:clickable="true"
            android:layout_margin="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/apply3_small"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/luxiang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="录制并上传公证视频"
                    android:textColor="#ff245fff"
                    android:textSize="14sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="301dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonclick"
                android:layout_centerHorizontal="true"
                android:text="下一步"
                android:id="@+id/sbtn_apply3_next"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"/>
        </RelativeLayout>


    </LinearLayout>


</ScrollView>




